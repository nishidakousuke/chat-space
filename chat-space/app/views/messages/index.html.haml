.left-content
  .left-content__top
    %P.left-content__top--text
      = current_user.name
    %ul.font-box
      %li.font-box__icon
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'font-box__icon--link'
      %li.font-box__icon
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'font-box__icon--link'

  .left-content__bottom
    - current_user.groups.each do |group|
      =link_to group_messages_path(group), class: "left-content__bottom--link"  do
        .left-content__bottom-box
          %p.left-content__bottom-box--text
            = group.name
          %p.left-content__bottom-box--comment
            メッセージはまだありません。


.right-content
  .right-content__top
    .right-content__top-box
      %h2.right-content__top-box--text
        text-group
      %p.right-content__top-box--member
        name
    .right-content__top-editbox
      %a.right-content__top-editbox--edit{href: "#"}
        Edit

  .right-content__center
    .right-content__center-box
      .comment-box
        %p.comment-box--user
          test-user
        %p.comment-box--data
          2019/04/13
      %p.right-content__center-box--review
        こんにちは！

  .right-content__bottom
    %form.form-box
      .message-box
        %input.message-box--message{placeholder: "type a message"}
        %label.message-box__label
          %input.message-box__label--input{type: "file", accept: "image/*"}
          %i{class: "fa fa-image"}
      %input.form-box--sent{type: "submit", value: "SEND"}



