= render 'shared/side_bar';

.right-content
  .right-content__top
    .right-content__top-box
      %h2.right-content__top-box--text
        = @group.name
      %p.right-content__top-box--member
        Member :
        = render partial: 'group', collection: @groups
    .right-content__top-editbox
      = link_to edit_group_path(current_user), class: "right-content__top-editbox--edit" do
        Edit
  
  .right-content__center
    = render @messages

  .right-content__bottom
    = form_for [@group, @message], :html => {class: "form-box"} do |f|
      .message-box
        = f.text_field :body, class: 'message-box--message', placeholder: 'type a message'
        = f.label :image, class:'message-box__label' do
          = f.file_field :image, class: 'message-box__label--input', type: "file", accept: "image/*"
          = fa_icon 'picture-o', class: "fa fa-image"
      = f.submit 'Send', class: 'form-box--sent', type: "submit"



